@page "/login"
@model LoginModel

<div class="text-center">
    <h1 class="display-4">Login</h1>
    <form method="post">
        @foreach (var scheme in Model.AuthSchemes)
        {
            <button class="btn btn-default"
                    type="submit" name="scheme" value="@scheme.Name">
                @scheme.DisplayName
            </button>
        }
    </form>
</div>